# Application
APP_NAME="BlueMonitor Backend"
ENVIRONMENT="production"
DEBUG="false"
SECRET_KEY="change-this-to-a-secure-secret-key"
API_V1_STR="/api/v1"

# Server
HOST="0.0.0.0"
PORT="8000"
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# MongoDB
MONGODB_URL="mongodb://mongodb:27017"
MONGODB_DB_NAME="bluemonitor"

# SerpAPI
SERPAPI_KEY="your-serpapi-key"
SERPAPI_ENDPOINT="https://google.serper.dev/search"

# News Collection
NEWS_QUERY_INTERVAL_MINUTES="120"
MAX_NEWS_ARTICLES_PER_QUERY="25"

# AI Models
SENTENCE_TRANSFORMER_MODEL="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
SUMMARIZATION_MODEL="facebook/bart-large-cnn"
HF_HOME="./models"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
